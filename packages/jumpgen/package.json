{
  "name": "jumpgen",
  "type": "module",
  "version": "0.2.1",
  "description": "Easy, transparent ”watch mode” for filesystem access (powered by Chokidar)",
  "author": "Alec Larson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alloc/jumpgen.git"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/generator.d.ts",
      "default": "./dist/generator.js"
    },
    "./context": {
      "types": "./dist/context.d.ts",
      "default": "./dist/context.js"
    }
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "chokidar": "^4.0.1",
    "debug": "^4.3.7",
    "option-types": "^1.1.0",
    "picomatch": "^4.0.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^22.7.4",
    "@types/picomatch": "^3.0.1",
    "esbuild-plugin-alias": "^0.2.1",
    "tinyglobby": "^0.2.9"
  },
  "scripts": {
    "dev": "rimraf dist && tsup --sourcemap --watch",
    "build": "rimraf dist && tsup",
    "lint": "tsc -p . --noEmit --outDir node_modules/.tmp",
    "prepublishOnly": "pnpm -s build"
  }
}
